{
    "manifest_version": 3,
    "name": "The Eye",
    "version": "1.0.0",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["https://*/", "http://*/"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_scripts.js"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}
